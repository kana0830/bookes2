
<div class="container">
    <div class="row">
        <div class="col-xs-6">
        <h2>Editing Book</h2>
        <%= form_with model: @book, local: true do |f| %>

        <%= render 'layouts/error', model: f.object %>

        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class: "col-xs-12 book_title", id: "book_title" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class: "col-xs-12 book_body", id: "book_body" %>
          <%= f.submit class: "btn btn-primary col-xs-12", method: :post %>
        </div>
        <% end %>
        <%= link_to 'Show', @book %> | <%= link_to 'Back', books_path %>
        </div>
    </div>
</div>
