<!--プロフィール　※ログイン時共通-->
<div class="container">
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>

<!--BOOK新規投稿フォーム ※ログイン時共通-->
      <h2>New book</h2>
        <%= render 'books/form', book: @book, user: @user %>
    </div>

<!--右側の表示　Books-->
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                    <td>
                      <%= link_to(book.user) do %>
                        <%= attachment_image_tag(book.user, :profile_image, size: "40x40", format: "jpg", fallback: "no_image.jpg") %><br>
                      <% end %>
                    </td>
                    <td><%= link_to book.title, book %></td>
                    <td><%= book.body %></td>
                </tr>
                <% end %>
              <tbody>
            </table>
        </div>
    </div>
</div>
