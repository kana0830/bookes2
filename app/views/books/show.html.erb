<!--プロフィール　※ログイン時共通-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %> 

<!--BOOK新規投稿フォーム ※ログイン時共通-->
      <h2>New book</h2>
        <%= render 'books/form', book: @book, user: @user %>
    </div>

<!--右側の表示　Books-->
        <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">

                <tr>
                    <td>
                      <%= link_to(@book.user) do %>
                        <%= attachment_image_tag(@user, :profile_image, size: "40x40", format: "jpg", fallback: "no_image.jpg") %><br>
                        <%= @book.user.name %>
                      <% end %>
                    </td>
                    <td><%= link_to @book.title, @book %></td>
                    <td><%= @book.body %></td>
                    <% if @book.user_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_book_path(@book), class:"btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-danger" %></td>
                    <% end %>
                </tr>
                
            </table>
        </div>
    </div>
</div            