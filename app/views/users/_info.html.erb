  <tr>
    <%= attachment_image_tag(user, :profile_image, size: "100x100", format: "jpg", fallback: "no_image.jpg") %><br>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
