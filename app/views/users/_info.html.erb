<!--プロフィール　※ログイン時共通-->
<table class='table'>
  <tr>
    <%= image_tag attachment_url(user, :profile_image, :fill, 300, 300, format: "jpg") %><br>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<% if user.id == current_user.id %>
  <%= link_to edit_user_path(user) do %>
    <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end %>
<% else %>
  <%= link_to user do %>
    <span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end %>
<% end %>