<!--プロフィール　※ログイン時共通-->
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %> 

<!--BOOK新規投稿フォーム ※ログイン時共通-->
      <h2>New book</h2>
        <%= render 'books/form', book: @book, user: @user %>
    </div>

<!--右側の表示　Books-->
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Title</th>
              <th scope="col">Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book|%>
              <tr>
                <td>
                  <%= link_to(@user) do %>
                    <%= attachment_image_tag(@user, :profile_image, size: "50x50", format: "jpg", fallback: "no_image.jpg") %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title, book %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>